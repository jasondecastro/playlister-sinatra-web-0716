<form method="POST" action="/songs/<%= @song.slug %>">
  <input type="hidden" name="_method" value="patch">

  <input type="text" name="song[artist]" value="<%= @song.artist.name %>" id="Artist Name">
  <input type="text" name="song[name]" value="<%= @song.name %>" id="Name">

  
  <% Artist.all.each do |artist| %>

    <input type="checkbox" name="song[artist_ids][]" value="<%= artist.id %>" id="<%=artist.name %>"><%=artist.name%></input>
    
  <% end %>

   <% Genre.all.each do |genre| %>
      <input type="checkbox" name="song[genre_ids][]" value="<%= genre.id %>" id="<%=genre.name %>"><%=genre.name%></input>
  <% end %>

  <input type="submit" name="submit" id="Save" value="submit">

</form>
